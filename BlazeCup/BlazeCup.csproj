<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RunCommand>dotnet</RunCommand>
    <RunArguments>blazor serve</RunArguments>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="bootstrap" Version="4.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.Browser" Version="0.4.0" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.Build" Version="0.4.0" />
    <DotNetCliToolReference Include="Microsoft.AspNetCore.Blazor.Cli" Version="0.3.0" />
  </ItemGroup>

  <ItemGroup>
    <BlazorGenerate Remove="Pages\Todo.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Pages\Todo.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Pages\GroupView.cshtml" />
    <None Include="Pages\Teams.cshtml" />
    <None Include="Pages\Todo.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <BlazorGenerate Remove="Pages\Teams.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Pages\Teams.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <BlazorGenerate Remove="Pages\GroupView.cshtml" />
  </ItemGroup>

</Project>
